@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
@model UnivMate.Models.LoginViewModel
@{
    ViewData["Title"] = "Login to UnivMate";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --univmate-red: #d62839;
            --univmate-dark-red: #a4161a;
            --univmate-light: #f8f9fa;
            --univmate-dark: #212529;
            --univmate-gray: #6c757d;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f9f9f9;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f9f9f9 0%, #f0f0f0 100%);
        }

        .auth-container {
            width: 100%;
            max-width: 1200px;
            margin: 2rem;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            display: flex;
        }

        .auth-illustration {
            flex: 1;
            background: linear-gradient(135deg, var(--univmate-red), var(--univmate-dark-red));
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem;
            color: white;
        }

        .auth-content {
            flex: 1;
            background: white;
            padding: 3rem;
        }

        .auth-header {
            margin-bottom: 2.5rem;
            text-align: center;
        }

        .auth-logo {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--univmate-red);
            margin-bottom: 0.5rem;
        }

        .auth-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--univmate-dark);
        }

        .auth-subtitle {
            color: var(--univmate-gray);
            font-size: 0.95rem;
        }

        .form-control {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            margin-bottom: 1.25rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--univmate-red);
                box-shadow: 0 0 0 3px rgba(214, 40, 57, 0.15);
            }

        .btn-auth {
            padding: 0.75rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s;
            margin-top: 0.5rem;
        }

        .btn-primary {
            background-color: var(--univmate-red);
            border: none;
        }

            .btn-primary:hover {
                background-color: var(--univmate-dark-red);
                transform: translateY(-2px);
            }

        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--univmate-gray);
            font-size: 0.9rem;
        }

            .auth-footer a {
                color: var(--univmate-red);
                font-weight: 500;
                text-decoration: none;
            }

        .form-check-input:checked {
            background-color: var(--univmate-red);
            border-color: var(--univmate-red);
        }

        .text-danger {
            font-size: 0.85rem;
            color: var(--univmate-red);
            margin-top: -0.75rem;
            margin-bottom: 0.75rem;
            display: block;
        }

        .illustration-img {
            max-width: 100%;
            height: auto;
        }

        .illustration-text {
            max-width: 400px;
        }

        .illustration-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .illustration-subtitle {
            opacity: 0.9;
            margin-bottom: 1.5rem;
        }

        @@media (max-width: 992px) {
            .auth-container {
                flex-direction: column;
            }

            .auth-illustration {
                padding: 2rem;
                text-align: center;
            }
        }

        @@media (max-width: 576px) {
            .auth-content {
                padding: 2rem 1.5rem;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- In both login.cshtml and register.cshtml -->
    
    <div class="auth-container">
        <div class="auth-illustration">
            <div class="illustration-text">

                <div class="auth-logo">
                    @{
                        string[] extensions = { ".png", ".jpg", ".svg" };
                        string logoPath = "images/logo";
                        string logoUrl = null;

                        foreach (string extension in extensions)
                        {
                            if (System.IO.File.Exists(env.WebRootPath + "/" + logoPath + extension))
                            {
                                logoUrl = "/" + logoPath + extension;
                                break;
                            }
                        }

                        if (logoUrl != null)
                        {
                            <img src="@logoUrl" alt="TCU Jobs Logo" style="max-height: 120px;">
                        }
                        else
                        {
                            <p>No logo found.</p>
                        }
                    }
                </div>
                <h3 class="illustration-title">Welcome Back!</h3>
                <p class="illustration-subtitle">Login to access your personalized campus dashboard and connect with your academic community.</p>
              
            </div>
        </div>
        <div class="auth-content">
            <div class="auth-header">
                <div class="auth-logo">TCU Jobs</div>
                <h2 class="auth-title">Login to Your Account</h2>
                <p class="auth-subtitle">Enter your credentials to continue</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input">
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>

                <button type="submit" class="btn btn-primary btn-auth">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </button>

                <div class="auth-footer">
                    <p>Don't have an account? <a asp-action="Register">Create one</a></p>              
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>