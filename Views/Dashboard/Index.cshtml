            position: relative;
            margin-bottom: 1rem;
        }

        .file-upload-label {
            display: block;
            padding: 0.75rem;
            border: 2px dashed #ddd;
            border-radius: 6px;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
        }

            .file-upload-label:hover {
                border-color: var(--primary-color);
                background-color: #fff9f9;
            }

            .file-upload-label i {
                display: block;
                font-size: 2rem;
                margin-bottom: 0.5rem;
                color: var(--primary-color);
            }

