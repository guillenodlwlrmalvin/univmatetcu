            // Add location form
                      document.getElementById('addLocationForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const name = document.getElementById('newLocationName').value.trim();
            const group = document.getElementById('newLocationGroup').value;
            const subgroup = document.getElementById('newLocationSubgroup').value.trim();

            if (!name || !group) {
                showNotification('Please fill all required fields', false);
                return;
