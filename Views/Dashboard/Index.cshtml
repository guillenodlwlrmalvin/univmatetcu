        // Update the location dropdown with current data
                  async function updateLocationDropdown() {
            const select = document.getElementById('location');
            if (!select) return;

            try {
                const response = await fetch('/Dashboard/GetLocations');
                const data = await response.json();

                if (data.success && data.locations) {
                    // Clear existing options (keep first "Select location..." option)
                    while (select.options.length > 1) {
                        select.remove(1);
                    }

                    // Group locations by group
                    const groups = {};
                    data.locations.forEach(loc => {
                        if (!groups[loc.group]) {
                            groups[loc.group] = [];
                        }
                        groups[loc.group].push(loc);
                    });

                    // Add options grouped by group
                    for (const [groupName, locations] of Object.entries(groups)) {
                        const groupOptgroup = document.createElement('optgroup');
                        groupOptgroup.label = groupName;

                        locations.forEach(loc => {
                            const option = document.createElement('option');
                            option.value = loc.name;
                            // Include subgroup in the displayed text if available
                            option.textContent = loc.subgroup
                                ? `${loc.name} (${loc.subgroup})`
                                : loc.name;
                            groupOptgroup.appendChild(option);
                        });

                        select.appendChild(groupOptgroup);
                    }
                }
            } catch (error) {
                console.error('Error updating location dropdown:', error);
            }
        }



